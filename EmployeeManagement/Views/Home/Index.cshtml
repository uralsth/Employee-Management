            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/breaking.png" />
            <div class="card-footer text-center">

                @*Tag Helper*@
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">Display</a>

                @*Html Helper*@
